<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>Entegre.Extensions</PackageId>
    <Version>1.0.0</Version>
    <Description>A comprehensive .NET 8+ developer toolkit with extensions for strings, collections, encryption, transformations, dates with holidays, validation, and more.</Description>
    <PackageTags>extensions;utilities;helpers;string;collections;encryption;datetime;validation;dotnet</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../../README.md" Pack="true" PackagePath="/" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BCrypt.Net-Next" Version="4.0.3" />
  </ItemGroup>

</Project>
